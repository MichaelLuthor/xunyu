func oyjg-api-sign-generator 
  set sign 00000000-0000-0000-0000-00000000000
  body-get appKey appkey-value
  string.append sign appkey
  string.append sign $appkey-value
  body-get info info-value
  string.append sign info
  string.append sign $info-value
  body-get method method-value
  string.append sign method
  string.append sign $method-value
  body-get randomCode $random-code-value
  string.append sign randomCode
  string.append sign $random-code-value
  string.append sign 00000000-0000-0000-0000-00000000000
  string.md5 sign
  string.uppercase sign
  body-add sign $sign
endfunc

use poster
method POST
address http://oyjg-api-inquiry-platform.localhost.proj/v1/
# add-header Content-Type application/x-www-form-urlencoded
body-add method inquiryPublishV2
body-add randomCode $string.uuid
body-add appKey JGZHPT

string.read-file info demo.json
body-add info $info

pre-request-handler oyjg-api-sign-generator
send
response-read-as-json response
log $response.status
assert-eques 200 $response.status

system.sleep 120

close